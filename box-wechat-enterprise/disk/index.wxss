@import "template/fileList.wxss";
.page{
    overflow-x: hidden;
}

/*微信备份  */

.weixinBackups {
    height: 80rpx;
    background: #fff;
}

.flex-container {
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding:10rpx 30rpx;
    background:#fff;
}
.flex-container .flex-row {
    display: flex;
    flex-direction:column;
    align-items: center;
}
.flex-container .flex-column {
    position:relative;
    padding:10rpx 0rpx;
    flex-grow:1;
}
.flex-container .flex-column:first-child{ 
    padding-left: 0rpx;
}
.flex-container .flex-column:last-child{ 
    padding-right: 0rpx;
}
.flex-container .flex-column .item-image {
    display: block;
    width:98rpx;
    height:98rpx;
    margin:0 auto;
}
.flex-container .flex-column .item-text {
    display:block;
    text-align: center;
}
.docspace-list {
  margin-top:20rpx;
}

.flex-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.weixin-image {
    width: 40rpx;
    height: 40rpx;
    margin: 0 20rpx 0 30rpx;
    border-radius: 50%;
}

.weixin-text {
    color: #333;
    font-size: 26rpx;
}

.recentlyViewed-image {
    width: 34rpx;
    height: 34rpx;
    margin: 0 20rpx 0 30rpx;
}

.shortcutFolder-image {
    width: 34rpx;
    height: 34rpx;
    margin: 0 15rpx 0 30rpx;
}

.arrow-image {
    width: 10rpx;
    height: 18rpx;
    margin: 0 30rpx 0 20rpx;
}

/*最近浏览  */

.recentlyViewed {
    margin-top: 20rpx;
}

.title-text {
    color: #333;
    font-size: 30rpx;
}

.recentlyViewed-title {
    background: #fff;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 2rpx solid #f1f1f1;
}

/*快捷文件夹  */

.shortcutFolder {
    margin-top: 20rpx;
}

.folderList {
    height: 130rpx;
    width: 930rpx;
    display: flex;
    align-items: center;
    background: #fff;
    border-bottom: 2rpx solid #f1f1f1;
    -webkit-transition: all 0.4s;
    transition: all 0.4s;
}

.folderList-item {
    width: 750rpx;
}

.folderIcon {
    width: 90rpx;
    height:90rpx;
    margin: 0 15rpx 0 40rpx;
}

.nodeName {
    font-size: 30rpx;
    color: #333;
}

.ownerName {
    color: #999;
    font-size: 24rpx;
    margin-top: 15rpx;
}

.share-view {
    height: 130rpx;
    width: 15%;
}

.folder-item {
    width: 85%;
    justify-content: flex-start;
}

.share-btn {
    height: 130rpx;
    width: 130rpx;
    justify-content: center;
    background-color: transparent;
}

.share-btn::after {
    border: none;
}

.share-icon {
    width: 40rpx;
    height: 40rpx;
}

.blankContainer {
    padding: 20rpx 0;
    background: #fff;
}

.blank-icon {
    width: 100px;
    height: 100px;
    position: relative;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
}
.text-center{
    text-align:center;
}
.blank-text {
    color: #a9a9a9;
    text-align: center;
}

.blank-folder-text {
    color: #a9a9a9;
    padding: 40rpx;
}

.plug_icon {
    width: 5rpx;
    height: 20rpx;
    padding: 0 15rpx;
}

/*侧滑  */

.deleteBtn {
    background-color: #ea5036;
    width: 180rpx;
    height: 100%;
    color: #fff;
    line-height: 130rpx;
    text-align: center;
}

.touch-moveToLeft-active {
    -webkit-transform: translateX(-180rpx);
    transform: translateX(-180rpx);
}

.touch-moveToRight-active {
    -webkit-transform: translateX(0rpx);
    transform: translateX(0rpx);
}

.navbar {
    background: #fff;
    box-shadow:4px 2px 2px #F5F5F5;
    position:absolute;
    top:0px;
    z-index:5;
    width:100%;
    display:-webkit-box;
}

.navbar-item {
    position: relative;
    display: block;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    padding: 5px 0;
    text-align: center;
    font-size: 0;
}

.navbar-item > image {
    width: 57px;
    height: 57px;
}

.navbar-title {
    display: inline-block;
    font-size: 28rpx;
    max-width: 8em;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    word-wrap: normal;
}

.navbar-item.bar-item-on {
    color: #585351;
    background: #fef9f6;
}
.file-icon {
    padding: 0 0 0 30rpx; 
}